
<% if signed_in? %>

    <%= form_for([@product, @product.comments.build], remote: true) do |f| %>
    <div class="form-group">
    <p>
      <%= f.label :body, "Comments" %><br>
      <%= f.text_area :body %>
    </p>
    </div>
    <p>
      <div class="rating">
        <%= f.label :rating %><br>
      </div>
    </p>
    <p>
      <%= f.submit "Submit", class:"btn btn-danger red" %>
    </p>

  <% end %>
<% end %>
