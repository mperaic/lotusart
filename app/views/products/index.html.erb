<p id="notice"><%= notice %></p>

<h1>Products</h1>
<div class="container" id="heading">
  <div class="row">
    <div class="col-xs-3">Name</div>
    <div class="col-xs-3">Description</div>
    <div class="col-xs-3">Image Url</div>
    <div class="col-xs-3">Colour</div>
  </div>
</div>
<div class="container">
    <% @products.each do |product| %>
    <div class="row">
        <div class="col-xs-3"><%= product.name %></div>
        <div class="col-xs-3"><%= product.description %></div>
        <div class="col-xs-3"><%= product.image_url %></div>
        <div class="col-xs-3"><%= product.colour %></div>
    </div>
    <table>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </table>
    <% end %>
</div>


<br>

